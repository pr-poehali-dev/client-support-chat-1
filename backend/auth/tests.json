      "method": "POST",
      "path": "/",
      "body": {
        "username": "123",
        "password": "803254"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "user": {
          "role": "string"
        }
      },
      "bodyMatcher": "partial"
