    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "wrong",
        "password": "wrong"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    }
  ]
